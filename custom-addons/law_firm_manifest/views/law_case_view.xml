<odoo>
    <data>
        <record id="view_law_case_list" model="ir.ui.view">
            <field name="name">law.case.list</field>
            <field name="model">law.case</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="client_name"/>
                    <field name="responsible_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_law_case_form" model="ir.ui.view">
            <field name="name">law.case.form</field>
            <field name="model">law.case</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="client_name"/>
                            <field name="responsible_id"/>
        <!--                    <field name="assistant_ids" widget="many2many_tags"/>-->
                            <field name="description"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_law_case" model="ir.actions.act_window">
            <field name="name">Name</field>
            <field name="res_model">law.case</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_law_case_list"/>
            <field name="help" type="html">
                <p>Gestione aqu√≠ los casos legales de la firma.</p>
            </field>
        </record>
    </data>
</odoo>