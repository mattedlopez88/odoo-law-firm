<odoo>
    <record id="view_partner_form_inherit_law" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.law</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insertar el checkbox después del nombre -->
            <xpath expr="//field[@name='company_name']" position="after">
                <field name="is_law_client" option="show"/>
                <field name="law_client_type" option="show"/>
            </xpath>

            <!-- Nueva pestaña para los casos -->
            <xpath expr="//notebook" position="inside">
                <page string="Casos Legales">
                    <field name="law_case_ids">
                        <list>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="responsible_id"/>
                            <field name="opening_date"/>
                        </list>
                    </field>
                </page>
                <page string="Notas Legales">
                    <field name="law_notes"/>
                </page>
            </xpath>

        </field>
    </record>

