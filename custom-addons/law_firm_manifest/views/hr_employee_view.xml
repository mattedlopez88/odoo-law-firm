<odoo>
    <record id="view_employee_form_inherit_law" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.law</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <!-- Inserta despuÃ©s del campo name -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_lawyer"/>
                <field name="bar_number"/>
                <field name="law_role"/>
                <field name="law_practice_area"/>
            </xpath>

        </field>
    </record>
</odoo>