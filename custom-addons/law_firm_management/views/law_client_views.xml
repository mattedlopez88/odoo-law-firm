    <!-- Law Client Tree View -->
    <record id="view_law_client_tree" model="ir.ui.view">
        <field name="name">law.client.list</field>
        <field name="model">law.client</field>
        <field name="arch" type="xml">
            <list string="Clientes">
                <field name="name"/>
                <field name="cedula"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="client_type"/>
                <field name="client_status"
                       decoration-success="client_status == 'active'"
                       decoration-warning="client_status == 'inactive'"
                       decoration-danger="client_status == 'blacklisted'"/>
                <field name="case_count"/>
                <field name="active_case_count"/>
                <field name="client_since"/>
            </list>
        </field>
    </record>

