<odoo>
    <!-- Law Client Form View -->
    <record id="view_law_client_form" model="ir.ui.view">
        <field name="name">law.client.form</field>
        <field name="model">law.client</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <header>
                    <button name="action_set_active"
                            string="Activar"
                            type="object"
                            class="btn-primary"
                            invisible="client_status == 'active'"/>
                    <button name="action_set_inactive"
                            string="Desactivar"
                            type="object"
                            class="btn-warning"
                            invisible="client_status == 'inactive'"/>
                    <button name="action_blacklist"
                            string="Lista Negra"
                            type="object"
                            class="btn-danger"
                            confirm="¿Está seguro de agregar este cliente a la lista negra?"
                            invisible="client_status == 'blacklisted'"/>
                    <field name="client_status" widget="statusbar"
                           statusbar_visible="prospect,active,inactive"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_cases"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-gavel">
                            <field name="case_count" widget="statinfo" string="Casos"/>
                        </button>
                        <button name="action_view_active_cases"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-folder-open">
                            <field name="active_case_count" widget="statinfo" string="Activos"/>
                        </button>
                        <button name="action_create_case"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-plus-circle">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Nuevo Caso</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Inactivo" bg_color="text-bg-warning"
                            invisible="client_status != 'inactive'"/>
                    <widget name="web_ribbon" title="Lista Negra" bg_color="text-bg-danger"
                            invisible="client_status != 'blacklisted'"/>

                    <field name="image_1920" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Cliente" required="1"/>
                        </h1>
                        <h3>
                            <field name="client_type" widget="radio" options="{'horizontal': true}"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Información de Identificación">
                            <field name="cedula" required="1"/>
                            <field name="ruc" invisible="client_type == 'natural'"/>
                            <field name="client_since"/>
                        </group>

<!--                        <group string="Contacto">-->
