<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_law_practice_area_list" model="ir.ui.view">
        <field name="name">law.practice.area.list</field>
        <field name="model">law.practice.area</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="case_count"/>
                <field name="active_case_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_law_practice_area_form" model="ir.ui.view">
        <field name="name">law.practice.area.form</field>
        <field name="model">law.practice.area</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
<!--                    <div class="oe_button_box" name="button_box">-->
<!--                        <button class="oe_stat_button" type="object"-->
<!--                                name="action_view_cases" icon="fa-gavel">-->
<!--                            <field name="case_count" widget="statinfo" string="Casos"/>-->
<!--                        </button>-->
<!--                    </div>-->

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Descripción">
                            <field name="description" placeholder="Descripción del área de práctica..."/>
                        </page>
                        <page string="Sub-áreas" invisible="not child_ids">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_law_practice_area" model="ir.actions.act_window">
        <field name="name">Area de Practica</field>
        <field name="res_model">law.practice.area</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>