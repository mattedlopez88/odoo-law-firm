<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend contact form with law firm fields -->
    <record id="view_partner_form_law_firm" model="ir.ui.view">
        <field name="name">res.partner.form.law.firm</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Law Firm">
                    <group>
                        <field name="is_law_client"/>
                        <field name="is_law_external_party"/>
                    </group>
                    <group>
                        <button name="action_view_law_cases"
                                string="View Cases"
                                type="object"
                                class="oe_highlight" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Action to list only law clients -->
    <record id="action_law_clients" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_law_client', '=', True)]</field>
        <field name="context">{'default_is_law_client': True}</field>
    </record>

</odoo>