<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_law_case_precedent_form" model="ir.ui.view">
    <field name="name">law.case.precedent.form</field>
    <field name="model">law.case.precedent</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
<!--                <div class="oe_button_box" name="button_box">-->
<!--                    <button class="oe_stat_button" type="object"-->
<!--                            name="action_view_cases" icon="fa-gavel">-->
<!--                        <field name="usage_count" widget="statinfo" string="Casos"/>-->
<!--                    </button>-->
<!--                </div>-->

                <group>
                    <group>
                        <field name="case_name"/>
                        <field name="reference_number"/>
                        <field name="court"/>
                        <field name="decision_date"/>
                    </group>
                    <group>
                        <field name="favoured_party"/>
                        <field name="practice_area_id"/>
                        <field name="jurisdiction"/>
                        <field name="is_binding"/>
                    </group>
                </group>

                <notebook>
                    <page string="Contenido Legal">
                        <group>
                            <field name="legal_principle"/>
                            <field name="summary"/>
                            <field name="relevant_articles"/>
                        </group>
                    </page>
                    <page string="Referencias">
                        <group>
                            <field name="url" widget="url"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

    <record id="action_law_case_precedents" model="ir.actions.act_window">
        <field name="name">Precedentes Legales</field>
        <field name="res_model">law.case.precedent</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>