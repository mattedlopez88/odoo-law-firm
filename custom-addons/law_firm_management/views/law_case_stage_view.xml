<odoo>
    <record id="view_law_case_stage_list" model="ir.ui.view">
        <field name="name">law.case.stage.list</field>
        <field name="model">law.case.stage</field>
        <field name="arch" type="xml">
            <list string="Case Stages">
                <field name="sequence"/>
                <field name="name"/>
                <field name="fold"/>
                <field name="is_closed_stage"/>
            </list>
        </field>
    </record>

    <record id="view_law_case_stage_form" model="ir.ui.view">
        <field name="name">law.case.stage.form</field>
        <field name="model">law.case.stage</field>
        <field name="arch" type="xml">
            <form string="Case Stage">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="fold"/>
                        <field name="is_closed_stage"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_law_case_stages" model="ir.actions.act_window">
        <field name="name">Case Stages</field>
        <field name="res_model">law.case.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help">Define the stages used to organize legal cases.</field>
    </record>

</odoo>