<!-- data/law_practice_area_data.xml -->
<odoo>
    <data noupdate="1">
        <!-- Main Practice Areas -->
        <record id="practice_area_civil" model="law.practice.area">
            <field name="name">Derecho Civil</field>
            <field name="code">CIV</field>
            <field name="sequence">10</field>
            <field name="color">1</field>
        </record>

        <record id="practice_area_criminal" model="law.practice.area">
            <field name="name">Derecho Penal</field>
            <field name="code">PEN</field>
            <field name="sequence">20</field>
            <field name="color">2</field>
        </record>

        <record id="practice_area_labor" model="law.practice.area">
            <field name="name">Derecho Laboral</field>
            <field name="code">LAB</field>
            <field name="sequence">30</field>
            <field name="color">3</field>
        </record>

        <record id="practice_area_family" model="law.practice.area">
            <field name="name">Derecho de Familia</field>
            <field name="code">FAM</field>
            <field name="sequence">40</field>
            <field name="color">4</field>
        </record>

        <record id="practice_area_commercial" model="law.practice.area">
            <field name="name">Derecho Comercial</field>
            <field name="code">COM</field>
            <field name="sequence">50</field>
            <field name="color">5</field>
        </record>
    </data>
</odoo>
