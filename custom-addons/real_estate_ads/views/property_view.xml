<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_property_view_offer" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('property_id', '=', active_id)]</field>
        </record>

        <record id="estate_property_list_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                </list>
            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" type="object" string="Sold" class="btn btn-primary" />
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(real_estate_ads.action_property_view_offer)d" type="action">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <group>
                                <field name="state"/>
                                <field name="type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <list editable="bottom">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                        <field name="validity"/>
                                        <field name="creation_date"/>
                                        <field name="deadline"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="sales_id"/>
                                    <field name="buyer_id"/>
                                    <field name="buyer_phone"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Name</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="estate_property_list_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Create a property to advertise
                </p>
            </field>
        </record>
    </data>
</odoo>